{
  "manifest_version": 3,
  "name": "PasteIt",
  "version": "1.0",
  "description": "Capture multiple copied text snippets and use them to fill web forms.",
  "permissions": ["storage", "scripting", "clipboardWrite", "contextMenus", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["sounds/click.mp3"],
      "matches": ["<all_urls>"]
    }
      ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
      "https://chrome.google.com/webstore/*"
    ],
      "js": ["content.js"],
      "run_at": "document_start", 
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "64": "icons/icon64.png",
      "128": "icons/icon128.png"
    }
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+C",
        "mac": "Command+Shift+C"
      }
    }
  }
}